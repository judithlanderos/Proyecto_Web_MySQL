<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eafaf1"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">

        <!-- Número de Control -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Número de Control"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_gravity="start" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="1 letra seguida de 8 números"
                android:maxLength="9"
                android:inputType="text" />
        </LinearLayout>

        <!-- Nombre -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_gravity="start" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Solo letras"
                android:maxLength="50"
                android:inputType="text" />
        </LinearLayout>

        <!-- Primer Apellido -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Primer Apellido"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_gravity="start" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Solo letras"
                android:maxLength="50"
                android:inputType="text" />
        </LinearLayout>

        <!-- Segundo Apellido -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Segundo Apellido"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_gravity="start" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Solo letras"
                android:maxLength="50"
                android:inputType="text" />
        </LinearLayout>

        <!-- Fecha de Nacimiento -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha de Nacimiento"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_gravity="start" />

            <DatePicker
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:scaleX="0.8"
                android:scaleY="0.8" />
        </LinearLayout>

        <!-- Teléfono -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Teléfono"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_gravity="start" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="10 dígitos"
                android:maxLength="10"
                android:inputType="phone" />
        </LinearLayout>

        <!-- Correo Electrónico -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Correo Electrónico"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_gravity="start" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="letras@letras.com"
                android:maxLength="100"
                android:inputType="textEmailAddress" />
        </LinearLayout>

        <!-- Carrera -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Carrera"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_gravity="start" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/carreras" />
        </LinearLayout>

        <!-- Botón -->
        <Button
            android:id="@+id/btnAgregar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="AGREGAR"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</ScrollView>
