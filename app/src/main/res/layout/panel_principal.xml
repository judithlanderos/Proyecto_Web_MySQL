<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e9f7ef"
    android:padding="16dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#28a745">

        <TextView
            android:id="@+id/headerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gestión de Alumnos"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/logoutButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cerrar Sesión"
            android:backgroundTint="#ffc107"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bienvenido al sistema ABCC"
                android:textColor="#333"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gestiona Altas, Bajas, Cambios y Consultas de forma eficiente."
                android:textColor="#555"
                android:textSize="16sp"
                android:layout_marginBottom="20dp" />

            <!-- Navigation Buttons -->
            <Button
                android:id="@+id/altasButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Altas"
                android:backgroundTint="#28a745"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="10dp" />

            <Button
                android:id="@+id/bajasButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bajas"
                android:backgroundTint="#28a745"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="10dp" />

            <Button
                android:id="@+id/cambiosButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cambios"
                android:backgroundTint="#28a745"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="10dp" />

            <Button
                android:id="@+id/consultasButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Consultas"
                android:backgroundTint="#28a745"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="10dp" />

            <Button
                android:id="@+id/vistasButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vistas"
                android:backgroundTint="#28a745"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="10dp" />

            <Button
                android:id="@+id/historialCambiosButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Historial de Cambios-Trigger"
                android:backgroundTint="#28a745"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="10dp" />

            <Button
                android:id="@+id/procedimientoFuncionButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Procedimiento y Función"
                android:backgroundTint="#28a745"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
